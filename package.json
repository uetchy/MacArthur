{
  "name": "macarthur",
  "productName": "MacArthur",
  "version": "1.0.0",
  "description": "MacArthur brings GUI to ghq.",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "electronVersion": "1.8.4",
  "scripts": {
    "test": "ava",
    "start": "run-p watch:*",
    "watch:electron": "electron .",
    "watch:js": "parcel --target=electron index.js",
    "build":
      "electron-packager . $npm_package_productName --out=dist --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion --icon=./icon.icns --overwrite"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "bluebird": "^3.4.1",
    "react": "^16.3.0",
    "react-desktop": "^0.3.4",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "electron": "^1.8.4",
    "electron-packager": "^11.2.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.7.0",
    "spectron": "^3.8.0"
  },
  "babel": {
    "presets": ["es2015", "react"]
  }
}
