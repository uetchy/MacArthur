{
  "name": "macarthur",
  "productName": "MacArthur",
  "version": "1.0.0",
  "private": true,
  "description": "MacArthur brings GUI to ghq.",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "license": "MIT",
  "main": "main.js",
  "electronVersion": "1.8.4",
  "scripts": {
    "test": "npm run build && ava",
    "start": "run-p watch:*",
    "watch:electron": "electron .",
    "watch:js": "parcel --target=electron index.js",
    "build": "parcel build --target=electron index.js",
    "pack": "npm run build && electron-packager . $npm_package_productName --out=dist --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion --icon=./icon.icns --overwrite"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "bluebird": "^3.4.1",
    "react": "^16.4.0",
    "react-desktop": "^0.3.5",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "electron": "^2.0.2",
    "electron-packager": "^12.1.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1",
    "spectron": "^3.8.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}