    "react-dom": "^15.3.0",
    "react-tap-event-plugin": "^1.0.0"
  },
  "devDependencies": {
    "electron-packager": "7.3.0",
    "electron-prebuilt": "^1.3.2",
    "eslint-config-xo-react": "^0.8.0",
    "eslint-plugin-react": "^6.0.0",
    "mocha": "^3.0.1",
    "npm-run-all": "^2.3.0",
    "spectron": "^3.3.0",
    "xo": "^0.16.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
