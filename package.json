{
  "name": "macarthur",
  "productName": "MacArthur",
  "version": "1.0.0",
  "private": true,
  "description": "MacArthur brings GUI to ghq.",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "test": "npm run build && ava",
    "start": "run-p watch:*",
    "watch:electron": "electron .",
    "watch:js": "parcel --target=electron index.js",
    "build": "parcel build --target=electron index.js",
    "pack": "npm run build && electron-packager . $npm_package_productName --out=dist --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion --icon=./icon.icns --overwrite"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.4.0",
    "react-desktop": "^0.3.5",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "ava": "^2.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^6.0.5",
    "electron-packager": "^14.0.5",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1",
    "spectron": "^8.0.0"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  }
}
