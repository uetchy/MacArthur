  "version": "1.0.0",
  "description": "MacArthur brings GUI to ghq.",
  "author": "Yasuaki Uechi <uetchy@randompaper.co> (https://randompaper.co/)",
  "license": "MIT",
  "private": true,
  "main": ".",
  "electronVersion": "1.3.2",
  "scripts": {
    "test": "mocha; xo",
